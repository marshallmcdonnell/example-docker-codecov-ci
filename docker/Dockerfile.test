# Get python version
FROM python:3.6-slim

# Install python dependencies
RUN apt-get update && \
    apt-get -y upgrade && \
    apt-get install python-pip -y && \
    pip install pytest


# Setup work directory
ENV APP_HOME=/usr/local/app/
RUN mkdir -p $APP_HOME
WORKDIR $APP_HOME

# Copy git content from current branch
ADD ./app $WORKDIR

